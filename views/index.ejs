<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Youtube To Audio</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      window.tailwindConfig = {
        theme: {
          extend: {
            colors: {
              clifford: "#da373d",
              dark: "#1f2937",
              gray: {
                100: "#f5f5f5",
                200: "#e5e7eb",
                300: "#d1d5db",
                400: "#9ca3af",
                500: "#6b7280",
                600: "#4b5563",
                700: "#374151",
                800: "#1f2937",
                900: "#111827",
              },
            },
          },
        },
      };
    </script>
    <style>
      body {
        font-family: "Courier New", Courier, monospace;
      }
    </style>
  </head>

  <body
    class="bg-dark text-gray-100 bg-zinc-900 flex justify-center items-center h-screen"
  >
    <div class="container mx-auto py-8 px-4">
      <% if(typeof success == 'undefined' || !success) {%>
      <form action="/convert-mp3" id="form" method="post" class="mb-8">
        <label for="videoUrl" class="block mb-2">Enter video URL here</label>

        <input
          type="text"
          name="videoUrl"
          id="videoUrl"
          class="w-full px-4 py-2 rounded-md bg-gray-800 text-gray-100 focus:outline-none focus:ring-2 focus:ring-clifford"
        />
        <button
          id="convertBtn"
          type="submit"
          class="mt-4 px-6 py-2 bg-zinc-100 rounded-md text-zinc-900 font-bold"
        >
          Submit
        </button>
      </form>
      <% } %>
      <div class="output">
        <% if(typeof success != 'undefined' && success) {%>
        <a
          href="<%= songLink %>"
          id="downloadBtn"
          class="inline-block px-6 py-2 rounded-md mt-4 px-6 py-2 bg-[#16a34a] rounded-md text-zinc-100 font-bold"
        >
          Download Audio
        </a><br><br>
        <p class="text-yellow-500">
          Title: <span class="text-white"><%= title_video %></span>
        </p>
        <p class="text-yellow-500">
          File Size: <span class="text-white"><%= fileSize %></span>
        </p>
        <p class="text-yellow-500">
          Duration: <span class="text-white"><%= duration %></span>
        </p><br>
        <a
        href="/"
        id="downloadBtn"
        class="inline-block px-6 py-2 rounded-md mt-4 px-6 py-2 bg-zinc-100 rounded-md text-zinc-900 font-bold"
      >
       Convert another
      </a>
        <% } else if(typeof success != 'undefined' && !success) {%>
        <p id="errorMessage" class="text-red-500"><%= message %></p>
 
        <% } %>
      </div>
    </div>
  </body>
  <script></script>
</html>
